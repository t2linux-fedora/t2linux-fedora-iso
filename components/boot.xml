		<package name="uki-direct"/>
	</packages>
	<packages type="iso" patternType="plusRecommended" profiles="BootCore">
		<package name="grub2-efi-aa64-cdboot" arch="aarch64"/>
		<package name="grub2-efi-x64-cdboot" arch="x86_64"/>
	</packages>
</image>
